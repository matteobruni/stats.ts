{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "importHelpers": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./node_modules/**/*",
    "./dist/"
  ]
}
